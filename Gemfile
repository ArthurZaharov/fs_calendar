	gem 'capybara-webkit', '~> 1.3.0'
	gem 'shoulda-matchers', '~> 2.6.2'
	gem 'faker', '~> 1.4.2'
end

group :production do
	gem 'rails_12factor', '~> 0.0.2'
end

