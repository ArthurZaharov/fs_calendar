<div class="row">
	<div class="col-sm-offset-2 col-sm-4">
		<h2>Create new event</h2>
	</div>
</div>

<%= form_for @calendar_event, html: { class: "form-horizontal" } do |f| %>

	<div class="row">
		<div class="col-sm-offset-2 col-sm-4">
			<%= render 'shared/error_messages', object: f.object %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :title, class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
			<%= f.text_field :title, autofocus: true, class: "form-control", placeholder: "Event title..." %>
		</div>
	</div>

	<div class="form-group">
		<%= f.label :date, class: "col-sm-2 control-label" %>
		<div class="col-sm-4">
			<%= f.datetime_select :date, class: "form-control" %>
		</div>
	</div>

	<div class="form-group">
		<div class="col-sm-offset-2 col-sm-4">
			<%= f.submit "Create event", class: "btn btn-default" %>
		</div>
	</div>

<% end %>